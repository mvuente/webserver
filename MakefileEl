NAME = webserv
CC = clang++
FLAGS = -std=c++98 -Wextra -Werror -Wall
#FLAGS=
SRC = main.cpp \
parser/Config.cpp \
server/Server.cpp \
server/Location.cpp \
StatusCode.cpp


OBJ = $(SRC:.cpp=.o)

.PHONY: all clean fclean re

all: $(NAME)

%.o:%.cpp
	$(CC) -g $(FLAGS) -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(FLAGS) $(OBJ) -o $(NAME)

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all